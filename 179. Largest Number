class Solution {
public:
    string largestNumber(vector<int>& nums) {
        int n = nums.size() ;
        vector<string> v(n) ;
        for(int i = 0; i < n; i++) v[i] = to_string(nums[i]) ;
        sort(v.begin(), v.end(), [&](string& a, string& b) {
            return a + b > b + a ;
        }) ;
        if(v[0] == "0") return v[0] ;
        string s = "" ;
        for(int i = 0; i < n; i++) s += v[i] ;
        return s ;
    }
};
