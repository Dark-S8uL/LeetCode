class Solution {
public:
    int countBattleships(vector<vector<char>>& board) {
        int m = board.size(), n = board[0].size() ;
        int cnt = 0 ;
        for(int i = 0; i < m; i++) {
            for(int j = 0; j < n; j++) {
                if(board[i][j] == 'X') {
                    if((i-1 >= 0 && board[i-1][j] == 'X') || (i+1 < m && board[i+1][j] == 'X')) {
                        int x = i ;
                        while(x >= 0 && board[x][j] == 'X') board[x--][j] = '.' ;
                        x = i+1 ;
                        while(x < m && board[x][j] == 'X') board[x++][j] = '.' ;
                    } else if((j-1 >= 0 && board[i][j-1] == 'X') || (j+1 < n && board[i][j+1] == 'X')) {
                        int y = j ;
                        while(y >= 0 && board[i][y] == 'X') board[i][y--] = '.' ;
                        y = j+1 ;
                        while(y < n && board[i][y] == 'X') board[i][y++] = '.' ;
                    } else board[i][j] = '.' ;
                    cnt++ ;
                }
            }
        }
        return cnt ;
    }
};
