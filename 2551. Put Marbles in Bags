class Solution {
public:
    long long putMarbles(vector<int>& wt, int k) {
        int n = wt.size() ;
        if(n == k) return 0 ;
        vector<int> v(n-1) ;
        for(int i = 0; i < n-1; i++) v[i] = wt[i] + wt[i+1] ;
        sort(v.begin(), v.end()) ;
        long long mini = 0, maxi = 0 ;
        for (int i = 0; i < k - 1; i++) {
            mini += v[i] ;
            maxi += v[n-2-i] ;
        }
        return maxi - mini ;
    }
};
