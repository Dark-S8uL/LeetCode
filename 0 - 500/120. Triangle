class Solution {
public:
    int t[201][201] ;
    int solve(int i, int j, int n, vector<vector<int>>& triangle) {
        if(i == n-1) return triangle[i][j] ;
        if(t[i][j] != INT_MAX) return t[i][j] ;
        int a = solve(i+1, j, n, triangle) ;
        int b = solve(i+1, j+1, n, triangle) ;
        return t[i][j] = triangle[i][j] + min(a, b) ;
    }
    int minimumTotal(vector<vector<int>>& triangle) {
        int n = triangle.size() ;
        for(int i = 0; i < n; i++) {
            for(int j = 0; j <= i; j++) {
                t[i][j] = INT_MAX ;
            }
        }
        return solve(0, 0, n, triangle) ;
    }
};
