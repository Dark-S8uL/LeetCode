class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int t) {
        int n = nums.size() ;
        int i = 0, j = n-1 ;
        while(i < j) {
            int a = nums[i] + nums[j] ;
            if(a == t) break ;
            else if(a < t) i++ ;
            else j-- ;
        }
        return {i+1, j+1} ;
    }
};
