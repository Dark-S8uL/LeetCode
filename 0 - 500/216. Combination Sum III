class Solution {
public:
    vector<vector<int>> v ;
    void solve(int i, int sum, int k, int n, vector<int>& temp) {
        if(temp.size() == k && sum == n) {
            v.push_back(temp) ;
            return ;
        }
        if((sum > n) || (temp.size() >= k && sum != n)) return ;
        for(int j = i; j < 10; j++) {
            temp.push_back(j) ;
            solve(j+1, sum+j, k, n, temp) ;
            temp.pop_back() ;
        }
    }
    vector<vector<int>> combinationSum3(int k, int n) {
        vector<int> temp ;
        solve(1, 0, k, n, temp) ;
        return v ;
    }
};
