class Solution {
public:
    string getHint(string secret, string guess) {
        int n = secret.size() ;
        int b = 0, c = 0 ;
        unordered_map<char, int> mp1, mp2 ;
        for(int i = 0; i < n; i++) {
            if(secret[i] == guess[i]) b++ ;
            else {
                mp1[secret[i]]++ ;
                mp2[guess[i]]++ ;
            }
        }
        for(auto& p : mp1) {
            if(mp2.find(p.first) != mp2.end()) c += min(p.second, mp2[p.first]) ;
        }
        string s = to_string(b) + "A" + to_string(c) + "B" ;
        return s ;
    }
};
