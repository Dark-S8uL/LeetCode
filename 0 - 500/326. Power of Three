# Approach 01 :

class Solution {
public:
    bool isPowerOfThree(int n) {
        int a = 0 ;
        for(int i = 0; pow(3, i) <= n; i++) {
            a = pow(3, i) ;
            if(a == n) return true ;
        }
        return false ;
    }
};

------------------------------------------------
# Approach 02 :

class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n == 0) return false ;
        while(n % 3 == 0) n /= 3 ;
        return n == 1 ;
    }
};

------------------------------------------------
# Approach 03 :

class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n == 0) return false ;
        if(n == 1) return true ;
        return (n % 3 == 0) && isPowerOfThree(n / 3) ;
    }
};
