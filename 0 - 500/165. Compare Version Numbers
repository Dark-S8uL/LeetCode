class Solution {
public:
    int compareVersion(string v1, string v2) {
        int n1 = v1.size(), n2 = v2.size() ;
        int i = 0, j = 0 ;
        while(i < n1 && j < n2) {
            string a = "", b = "" ;
            while(i < n1 && v1[i] != '.') a += v1[i++] ;
            while(j < n2 && v2[j] != '.') b += v2[j++] ;
            int a1 = stoi(a), b1 = stoi(b) ;
            if(a1 < b1) return -1 ;
            else if(a1 > b1) return 1 ;
            i++ ; j++ ;
        }
        while(i < n1 && (v1[i] == '.' || v1[i] == '0')) i++ ;
        while(j < n2 && (v2[j] == '.' || v2[j] == '0')) j++ ;
        if(i < n1 && j >= n2) return 1 ;
        else if(i >= n1 && j < n2) return -1 ;
        return 0 ;
    }
};
