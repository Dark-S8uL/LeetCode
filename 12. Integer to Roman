class Solution {
public:
    string intToRoman(int num) {
        string s = "" ;
        vector<pair<string, int>> v = {
            {"M", 1000}, {"CM", 900}, 
            {"D", 500}, {"CD", 400}, 
            {"C", 100}, {"XC", 90},  
            {"L", 50}, {"XL", 40}, 
            {"X", 10}, {"IX", 9},
            {"V", 5}, {"IV", 4},
            {"I", 1}
        } ;
        for(int i = 0; i < 13; i++) {
            while(num >= v[i].second) {
                s += v[i].first ;
                num -= v[i].second ;
            }
        }
        return s ;
    }
};
