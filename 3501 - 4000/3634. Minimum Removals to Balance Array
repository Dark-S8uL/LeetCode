class Solution {
public:
    int minRemoval(vector<int>& nums, int k) {
        int n = nums.size() ;
        if(n == 1) return 0 ;
        sort(nums.begin(), nums.end()) ;
        int ans = INT_MAX ;
        for(int i = 0; i < n; i++) {
            long long d = (1LL * nums[i] * k) ;
            auto it = upper_bound(nums.begin(), nums.end(), d) ;
            if(it == nums.end()) ans = min(ans, i) ;
            else {
                int j = it - nums.begin() ;
                ans = min(ans, (n-j) + i) ;
            }
        }
        return ans ;
    }
};
