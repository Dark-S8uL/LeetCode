class Solution {
public:
    int climbStairs(int n, vector<int>& costs) {
        vector<int> t(n+1, 0) ;
        t[0] = 0 ;
        for(int j = 1; j <= n; j++) {
            t[j] = INT_MAX ;
            if(j-1 >= 0) t[j] = min(t[j], t[j-1] + costs[j-1] + 1) ;
            if(j-2 >= 0) t[j] = min(t[j], t[j-2] + costs[j-1] + 4) ;
            if(j-3 >= 0) t[j] = min(t[j], t[j-3] + costs[j-1] + 9) ;
        }
        return t[n] ;
    }
};
