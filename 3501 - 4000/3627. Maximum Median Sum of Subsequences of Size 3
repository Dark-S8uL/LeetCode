class Solution {
public:
    long long maximumMedianSum(vector<int>& nums) {
        int n = nums.size() ;
        sort(nums.begin(), nums.end()) ;
        long long sum = 0 ;
        int i = 0, j = n-2 ;
        while(i < j) {
            sum += nums[j] ;
            i++ ;
            j -= 2 ;
        }
        return sum ;
    }
};
