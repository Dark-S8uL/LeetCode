class Solution {
public:
    int maximumEnergy(vector<int>& energy, int k) {
        int n = energy.size() ;
        vector<int> v(n, 0) ;
        int maxi = INT_MIN ;
        for(int i = n-1; i >= 0; i--) {
            if(i+k < n) v[i] = v[i+k] + energy[i] ;
            else v[i] = energy[i] ;
            maxi = max(maxi, v[i]) ;
        }
        return maxi ;
    }
};
