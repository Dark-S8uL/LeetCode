class Solution {
public:
    int maxFrequencyElements(vector<int>& nums) {
        unordered_map<int, int> mp ;
        for(int num : nums) mp[num]++ ;
        int maxFreq = 0;
        for(auto& p : mp) maxFreq = max(maxFreq, p.second) ;
        int cnt = 0 ;
        for(auto& p : mp) {
            if(p.second == maxFreq) cnt += p.second ;
        }
        return cnt ;
    }
};
