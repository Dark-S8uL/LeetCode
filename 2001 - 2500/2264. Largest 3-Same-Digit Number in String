class Solution {
public:
    string largestGoodInteger(string s) {
        int n = s.length() ;
        string str = "" ;
        for(int i = 0; i < n-2; i++) {
            if(s[i] == s[i+1] && s[i+1] == s[i+2]) {
                if(str.empty() || (stoi(s.substr(i, 3)) > stoi(str))) str = s.substr(i, 3) ;
            }
        }
        return str ;
    }
};
