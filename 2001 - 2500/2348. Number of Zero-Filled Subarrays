class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        int n = nums.size() ;
        long long cnt = 0 ;
        int i = 0 ;
        for(int j = 0; j < n; j++) {
            if(nums[j] != 0) {
                i = j + 1 ;
                continue ;
            }
            while(j < n && nums[j] == 0) j++ ;
            long long t = (j - i) ;
            cnt += ((t * (t+1))/ 2) ;
            i = j+1 ;
        }
        return cnt ;
    }
};
